<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net7.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWindowsForms>true</UseWindowsForms>
    <ImplicitUsings>enable</ImplicitUsings>
    <BaseOutputPath>Output\</BaseOutputPath>
    <GenerateDocumentationFile>True</GenerateDocumentationFile>
    <ApplicationIcon>swg_stardust_logo.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="SWGLauncher.xml" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="swg_stardust_logo.ico" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="NAudio" Version="2.1.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\FirebaseLib\FirebaseLib.vcxproj">
      <TreatAsUsed>true</TreatAsUsed>
    </ProjectReference>
    <ProjectReference Include="..\FirebaseWrapper\FirebaseWrapper.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Properties\Resources.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>Resources.resx</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Properties\Resources.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>Resources.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="xcopy &quot;$(ProjectDir)..\Resources&quot; &quot;$(ProjectDir)Output\$(Configuration)\net7.0-windows\Resources\&quot; /Y /S&#xD;&#xA;del &quot;$(ProjectDir)Output\$(Configuration)\net7.0-windows\Resources\google-services.json&quot;&#xD;&#xA;xcopy &quot;$(ProjectDir)..\Resources\google-services.json&quot; &quot;$(ProjectDir)Output\$(Configuration)\net7.0-windows\&quot; /Y /I&#xD;&#xA;xcopy &quot;$(ProjectDir)..\Resources\google-services.json&quot; &quot;$(ProjectDir)Output\$(Configuration)\net7.0-windows\Updater\&quot; /Y /I&#xD;&#xA;del &quot;$(ProjectDir)Output\$(Configuration)\net7.0-windows\SWGLauncher.xml&quot;&#xD;&#xA;del &quot;$(ProjectDir)Output\$(Configuration)\net7.0-windows\SWGLauncher.pdb&quot;&#xD;&#xA;del &quot;$(ProjectDir)Output\$(Configuration)\net7.0-windows\SWGLauncher.deps.json&quot;&#xD;&#xA;del &quot;$(ProjectDir)Output\$(Configuration)\net7.0-windows\FirebaseWrapper.pdb&quot;&#xD;&#xA;del &quot;$(ProjectDir)Output\$(Configuration)\net7.0-windows\Updater\FirebaseWrapper.pdb&quot;&#xD;&#xA;del &quot;$(ProjectDir)Output\$(Configuration)\net7.0-windows\Updater\SWGStardustUpdater.deps.json&quot;&#xD;&#xA;del &quot;$(ProjectDir)Output\$(Configuration)\net7.0-windows\Updater\SWGStardustUpdater.pdb&quot;" />
  </Target>

</Project>