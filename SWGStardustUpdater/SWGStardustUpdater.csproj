<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net7.0-windows10.0.17763.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <ApplicationIcon>swg_stardust_logo.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="swg_stardust_logo.ico" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\FirebaseLib\FirebaseLib.vcxproj" />
    <ProjectReference Include="..\FirebaseWrapper\FirebaseWrapper.csproj" />
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="xcopy &quot;$(ProjectDir)bin\$(Configuration)\net7.0-windows10.0.17763.0\&quot; &quot;$(ProjectDir)..\SWGLauncher\Output\$(Configuration)\net7.0-windows10.0.17763.0\Updater\&quot; /Y /S" />
  </Target>

</Project>
